<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF333333"
                android:padding="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:custom="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/orderCardView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="20dp"
            >

            <LinearLayout
                android:id="@+id/userInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/userPictureLayout"
                    android:layout_alignParentTop="true">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <com.github.lzyzsd.circleprogress.ArcProgress
                            android:id="@+id/status_arc_progress"
                            android:background="@android:color/transparent"
                            android:layout_centerHorizontal="true"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            custom:arc_progress="0"
                            custom:arc_max="100"
                            custom:arc_text_color="@android:color/transparent"
                            custom:arc_unfinished_color="@color/textcolor_gray_disabled"
                            custom:arc_finished_color="@color/rsgradient_magenta"
                            custom:arc_suffix_text_padding="100dp"/>

                        <ImageView
                            android:id="@+id/userPicture"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_button"
                            android:src="@drawable/thumbnail"
                            android:layout_centerHorizontal="true"
                            />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/userTextLayout"
                    android:layout_below="@+id/userPictureLayout"
                    >


                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Peter Karl"
                        android:textColor="@color/black_overlay"
                        android:textSize="20sp"/>

                    <View
                        android:layout_width="120dp"
                        android:layout_height="2px"
                        android:background="@color/gray"
                        />

                    <TextView
                        android:id="@+id/userPosition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Status"
                        android:textColor="@color/button_selected"
                        android:textSize="10sp"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:id="@+id/userLayout"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/actionButtons"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleTotalTime"
                            android:text="Total Working"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="18dp"
                            android:textColor="@color/button_selected"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/totalTime"
                            android:text="00:00:00"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/titleTotalTime"
                            android:layout_centerHorizontal="true"
                            android:textSize="25dp"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:orientation="horizontal"
                    android:id="@+id/userInformationLayout"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/qtPrepared"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="10"
                            android:textStyle="bold"
                            android:textColor="@color/button_selected"
                            android:textSize="15sp"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Prepared"
                            android:textColor="@color/button_selected"
                            android:textSize="15sp"
                            android:layout_below="@+id/qtPrepared"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/qtPending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="2"
                            android:textStyle="bold"
                            android:textColor="@color/button_selected"
                            android:textSize="15sp"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Pending"
                            android:textColor="@color/button_selected"
                            android:textSize="15sp"
                            android:layout_below="@+id/qtPending"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/qtCanceled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="3"
                            android:textStyle="bold"
                            android:textColor="@color/button_selected"
                            android:textSize="15sp"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Canceled"
                            android:textColor="@color/button_selected"
                            android:textSize="15sp"
                            android:layout_below="@+id/qtCanceled"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/kitchen_item_order_button"
            android:text="Logout"
            android:textColor="@color/button_selected"
            android:textSize="10sp"
            android:layout_alignBottom="@+id/orderCardView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/close"
            style="@style/rsFlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textStyle="bold"
            android:textColor="@color/button_selected"
            android:layout_alignTop="@+id/orderCardView"
            android:layout_alignEnd="@+id/orderCardView"/>

    </RelativeLayout>

</RelativeLayout>