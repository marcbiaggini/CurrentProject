<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rsflatbutton_blue_transparent"
    android:padding="20dp"
    android:minHeight="50dp">

    <TextView
        android:id="@+id/item_ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/textcolor_lightblue_selection"
        android:gravity="center"
        style="@style/rsTextEnourmous"
        tools:text="Item Ordered"/>

    <TextView
        android:id="@+id/item_observation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/textcolor_lightblue_selection"
        android:gravity="center"
        style="@style/rsTextEnourmous"
        tools:text="Item Observation"/>

    <ImageView
        android:id="@+id/fire_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/kitchen_firewhite"
        android:visibility="gone"/>

</LinearLayout>



