<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/status_bar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/rsgradient_red_dark"
        android:gravity="center"
        android:orientation="horizontal"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        app:tabTextAppearance="@style/rsTextTabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/food_category_tab"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:tabTextColor="@android:color/white"/>

    <com.rockspoon.rockandui.Components.NonSwipeableViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>
</LinearLayout>