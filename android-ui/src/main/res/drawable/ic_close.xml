<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <rotate
                android:fromDegrees="-45"
                android:pivotX="50%"
                android:pivotY="50%"
                android:toDegrees="-90">
                <shape android:shape="line">
                    <stroke android:width="3dp" android:color="@color/button_selected" />
                </shape>
            </rotate>
        </item>
        <item>
            <rotate
                android:fromDegrees="45"
                android:pivotX="50%"
                android:pivotY="50%"
                android:toDegrees="-90">
                <shape android:shape="line">
                    <stroke android:width="3dp" android:color="@color/button_selected" />
                </shape>
            </rotate>
        </item>

</layer-list>