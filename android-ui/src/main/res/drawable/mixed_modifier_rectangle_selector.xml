<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp"
                    android:color="@color/textcolor_lightblue_enabled"/>
        </shape>
    </item>
    <item android:state_selected="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/textcolor_lightblue_enabled"/>
            <stroke android:width="1dp"
                    android:color="@color/textcolor_lightblue_enabled"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp"
                    android:color="@color/textcolor_gray_disabled"/>
        </shape>
    </item>

</selector>