<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="20dp"
              android:paddingStart="15dp">

    <TextView
        android:id="@+id/seat_number"
        style="@style/rsTextLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/textcolor_black_enabled"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            style="@style/rsTextBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/order_subtotal"/>

        <TextView
            android:id="@+id/order_subtotal"
            style="@style/rsTextBig"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="@string/placeholder_order_subtotal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="20dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            style="@style/rsTextBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/tax"/>

        <TextView
            android:id="@+id/order_tax"
            style="@style/rsTextBig"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="@string/placeholder_order_tax"/>
    </LinearLayout>

    <View
        android:id="@+id/payment_paybill_separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="15dp"
        android:background="@color/bordercolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="20dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            style="@style/rsTextEnourmous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/order_total"/>

        <TextView
            android:id="@+id/order_total"
            style="@style/rsTextEnourmous"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/textcolor_lightblue"
            android:textStyle="bold"
            tools:text="@string/placeholder_order_total"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/pay_button"
            style="@style/rsButtonInverted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_pay"
            android:textAllCaps="false"
            android:textSize="@dimen/textsize_enourmous"/>

        <TextView
            android:id="@+id/label_paid"
            style="@style/rsLabelBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/paid"
            android:textColor="@color/textcolor_greenprice"
            android:textSize="@dimen/textsize_large"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/gray"/>
</LinearLayout>

