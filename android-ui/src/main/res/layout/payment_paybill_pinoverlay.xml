<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    android:orientation="vertical">

    <TextView
        android:id="@+id/payment_paybill_pinoverlay_message"
        style="@style/rsTextEnourmous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/enter_your_pin_code"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/payment_paybill_pinoverlay_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_paybill_pinoverlay_message"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>