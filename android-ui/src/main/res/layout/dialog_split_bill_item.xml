<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_topbar_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dialog_topbar_margin_bottom">

        <Button
            android:id="@+id/split_item_cancel_dialog"
            style="@style/rsFlatButton"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/button_cancel" />

        <TextView
            android:id="@+id/extended_member_title"
            style="@style/rsLabelEnourmous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/dialog_title_split_by"
            android:textColor="@color/textcolor_lightblue" />

        <Button
            android:id="@+id/split_item_done"
            style="@style/rsFlatButton"
            android:layout_width="64dp"
            android:layout_height="48dp"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/button_done" />
    </RelativeLayout>

    <com.rockspoon.rockandui.Components.FlowLayout
        android:id="@+id/split_by_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

    </com.rockspoon.rockandui.Components.FlowLayout>

</LinearLayout>