<?xml version="1.0" encoding="utf-8"?>
<merge
    android:id="@+id/pos_base_action_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/pos_base_back_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="left"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/back"
        android:tint="@android:color/white"/>

    <TextView
        android:id="@+id/pos_base_title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/placeholder_title"
        android:textColor="@color/white"
        android:textColorHighlight="@color/textcolor"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/pos_base_image_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/vec_search_black_36dp"
        android:tint="@android:color/white"
        android:visibility="visible"/>

    <Button
        android:id="@+id/pos_base_extra_button"
        style="@style/rsDoneButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:enabled="false"
        android:text="@string/button_done"
        android:visibility="gone"/>

</merge>