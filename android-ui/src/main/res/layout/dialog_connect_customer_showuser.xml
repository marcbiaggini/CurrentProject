<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_topbar_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dialog_topbar_margin_bottom"
        android:background="@color/gray">

        <TextView
            android:id="@+id/textView7"
            style="@style/rsTextEnourmous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_connect_customer" />

        <Button
            android:id="@+id/button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="0dp"
            android:text="@string/button_x"
            android:textColor="@color/textcolor_lightblue"
            android:textSize="@dimen/textsize_enourmous" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.rockspoon.rockandui.Components.RoundImageView
            android:id="@+id/view3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="76dp"
            android:src="@drawable/thumbnail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                style="@style/rsTextEnourmous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/placeholder_login_username"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="@style/rsRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.5" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/connect_customer_dialog_separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/bordercolor" />

    <Button
        android:id="@+id/button2"
        style="@style/rsPlainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/button_done" />

</LinearLayout>