<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/modifier_item_title"
            style="@style/rsTextBig"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_above="@+id/modifier_item_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/placeholder_modifier_item_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/modifier_item_mandatorybox"
            style="@style/rsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/modifier_item_title"
            android:layout_alignTop="@+id/modifier_item_title"
            android:layout_toEndOf="@+id/modifier_item_title"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/text_mandatory"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/modifier_item_arrow"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="5dp"
            android:src="@drawable/arrow_down" />

        <TextView
            android:id="@+id/modifier_item_description"
            style="@style/rsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/placeholder_modifier_item_description1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/modifier_item_price"
            style="@style/rsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/modifier_item_arrow"
            android:text="@string/placeholder_modifier_item_price"
            android:textColor="@color/textcolor_greenprice" />

    </RelativeLayout>

    <View
        android:id="@+id/modifier_item_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bordercolor" />

    <RadioGroup
        android:id="@+id/modifier_item_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</merge>