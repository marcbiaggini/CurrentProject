<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/login_user_Panel"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:layout_margin="10dp"
              android:background="@color/white"
              android:orientation="horizontal"
              android:padding="10dp">

    <com.rockspoon.rockandui.Components.RoundImageView
        android:id="@+id/login_user_userImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:src="@drawable/thumbnail"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/login_user_userName"
            style="@style/rsTextBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_login_username"
            android:textColor="@color/textcolor_lightblue"/>

        <TextView
            android:id="@+id/login_user_userRole"
            style="@style/rsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_login_userrole"/>
    </LinearLayout>

</LinearLayout>
