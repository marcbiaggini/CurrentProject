<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/flag_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitCenter"
        android:src="@drawable/country_us" />

    <TextView
        android:id="@+id/flag_country_name"
        style="@style/rsTextBig"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:text="@string/placeholder_country_name" />

    <TextView
        android:id="@+id/flag_country_prefix"
        style="@style/rsTextBig"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:text="@string/placeholder_country_code" />
</LinearLayout>