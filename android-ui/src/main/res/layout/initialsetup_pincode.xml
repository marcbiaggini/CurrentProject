<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:padding="@dimen/initialsetup_margin">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_unique_identifier"
        android:id="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        style="@style/rsTextEnourmous"
        android:gravity="center"
        android:textColor="@color/textcolor_lightblue"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/initialsetup_pinboxes"
        android:gravity="center"
        android:layout_below="@+id/initialsetup_invaliduidmsg"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/initialsetup_pin0"
            android:gravity="center"
            android:textSize="@dimen/textsize_superlarge" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/initialsetup_pin1"
            android:gravity="center"
            android:textSize="@dimen/textsize_superlarge" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/initialsetup_pin2"
            android:gravity="center"
            android:textSize="@dimen/textsize_superlarge" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/initialsetup_pin3"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textSize="@dimen/textsize_superlarge" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/initialsetup_pin4"
            android:gravity="center"
            android:inputType="none"
            android:textSize="@dimen/textsize_superlarge" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/initialsetup_pin5"
            android:gravity="center"
            android:textSize="@dimen/textsize_superlarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/initialsetup_keypad_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_below="@id/initialsetup_pinboxes"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/initialsetup_keypad1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/one"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />

            <Button
                android:id="@+id/initialsetup_keypad2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/two"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />

            <Button
                android:id="@+id/initialsetup_keypad3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/three"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/initialsetup_keypad4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/four"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />

            <Button
                android:id="@+id/initialsetup_keypad5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/five"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />

            <Button
                android:id="@+id/initialsetup_keypad6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/six"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/initialsetup_keypad7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/seven"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />

            <Button
                android:id="@+id/initialsetup_keypad8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/eight"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />

            <Button
                android:id="@+id/initialsetup_keypad9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/nine"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/initialsetup_keypad0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="@string/zero"
                android:textSize="@dimen/textsize_superlarge"
                android:textColor="@color/textcolor_lightblue" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/initialsetup_keypad_pad"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_back"
            android:id="@+id/initialsetup_backbtn"
            style="@style/rsFlatButton"
            android:layout_weight="1" />

        <Button
            style="@style/rsFlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_delete"
            android:id="@+id/initialsetup_deletebtn"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invalid_uid"
        android:id="@+id/initialsetup_invaliduidmsg"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textcolor_red"
        style="@style/rsTextBig"
        android:visibility="invisible" />

</RelativeLayout>