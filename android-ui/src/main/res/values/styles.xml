<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rsgradient_red</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/rsgradient_red</item>
    </style>
    <!-- Text Styles -->
    <style name="rsText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="rsTextBig" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="rsLabelBig" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="rsTextEnourmous" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize_enourmous</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="rsLabelEnourmous" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize_enourmous</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="rsInputTexEnourmous" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize_enourmous</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="rsTextLarge" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="rsTextSuperLarge" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize_superlarge</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="rsTextPaymentTablet" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textsize_payment_tablet</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="rsTextTopBar" parent="rsTextBig">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
    </style>
    <style name="rsTextTabBar" parent="rsTextTopBar">
        <item name="tabTextAppearance">@style/TabBarTextAppearance</item>
    </style>

    <style name="TabBarTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <!-- Rating Bar Styles -->
    <style name="rsRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rsratingbar</item>
        <item name="android:minHeight">26dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="rsRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rsratingbar_small</item>
        <item name="android:minHeight">26dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!-- Button Styles -->
    <style name="rsButton">
        <item name="android:background">@drawable/rsbutton</item>
        <item name="android:textColor">@drawable/textcolor_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="rsToggleButton">
        <item name="android:background">@drawable/rstogglebutton</item>
        <item name="android:textColor">@color/rstogglebutton_text</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="rsToggleRoundButton">
        <item name="android:background">@drawable/rstoggle_round_button</item>
        <item name="android:textColor">@color/rstogglebutton_text</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="rsButtonInverted">
        <item name="android:background">@drawable/rsbutton_inverted</item>
        <item name="android:textColor">@drawable/textcolor_inverted_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="rsRoundButton">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@drawable/textcolor_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="rsRoundButtonInverted">
        <item name="android:background">@drawable/round_button_inverted</item>
        <item name="android:textColor">@drawable/textcolor_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="rsWhiteRoundButton">
        <item name="android:background">@drawable/round_button_white</item>
        <item name="android:textColor">@color/textcolor_lightblue</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="rsPlainButton">
        <item name="android:background">@drawable/rsbutton</item>
        <item name="android:textColor">@color/textcolor_lightblue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="rsDoneButton">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textcolor_gray</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="rsCapsuleButton">
        <item name="android:background">@drawable/capsule_button</item>
        <item name="android:textColor">@drawable/textcolor_capsule_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Animations Style -->
    <style name="rsBottomTopDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out_dialog</item>
    </style>
    <style name="rsVerticalUpDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_up_out_dialog</item>
    </style>
    <style name="rsVerticalDownDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out_dialog</item>
    </style>
    <style name="rsFadeInOutDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>
    <!-- Dialog Styles -->
    <style name="rsDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/rsBottomTopDialogAnimation</item>
    </style>
    <style name="rsDialogExitUp" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/rsVerticalUpDialogAnimation</item>
    </style>
    <style name="rsDialogExitDown" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/rsVerticalDownDialogAnimation</item>
    </style>
    <style name="rsBottomTopDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:gravity">bottom</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/rsBottomTopDialogAnimation</item>
    </style>
    <style name="rsDialogFadeInOut" parent="rsDialog">
        <item name="android:windowAnimationStyle">@style/rsFadeInOutDialogAnimation</item>
    </style>
    <style name="rsErrorText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/textcolor_red</item>
    </style>
    <style name="CategoriesTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#128BA4</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabBackground">@drawable/food_category_tab</item>
        <item name="tabTextAppearance">@style/CategoriesTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>
    <style name="CategoriesTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7ad2e4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="FloorPlanControllerStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:scrollbars">horizontal</item>
    </style>
    <style name="rsFlatButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/textcolor_lightblue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/subaction_bar</item>
        <item name="colorPrimaryDark">@color/subaction_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>